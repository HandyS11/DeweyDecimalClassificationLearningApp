<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:localization="clr-namespace:DeweyDecimalClassificationLearningApp.Resources.Strings"
             x:Class="DeweyDecimalClassificationLearningApp.Pages.HomePage">
    
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout
                Padding="10"
                Spacing="30">
                <Image
                    Source="ddc.png"
                    HeightRequest="200"
                    Aspect="AspectFit" />

                <Label
                    Text="{x:Static localization:AppResources.AppName}"
                    Style="{StaticResource Headline}"/>

                <Label
                    Text="{x:Static localization:AppResources.AppSubTitle}"
                    Style="{StaticResource SubHeadline}"/>
                
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
    
</ContentPage>