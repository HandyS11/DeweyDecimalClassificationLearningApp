<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DeweyDecimalClassificationLearningApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:DeweyDecimalClassificationLearningApp.Pages"
    FlyoutBehavior="Disabled"
    Title="DeweyDecimalClassificationLearningApp">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate pages:HomePage}"
            Route="HomePage" />
        <ShellContent
            Title="DeweyGame"
            ContentTemplate="{DataTemplate pages:DeweyGamePage}"
            Route="DeweyGame" />
    </TabBar>
</Shell>
