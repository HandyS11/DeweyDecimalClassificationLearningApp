<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DeweyDecimalClassificationLearningApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:DeweyDecimalClassificationLearningApp.Pages"
    xmlns:localization="clr-namespace:DeweyDecimalClassificationLearningApp.Resources.Strings"
    FlyoutBehavior="Disabled"
    Title="DeweyDecimalClassificationLearningApp">

    <TabBar>
        <ShellContent
            Title="{x:Static localization:AppResources.Home}"
            ContentTemplate="{DataTemplate pages:HomePage}"
            Route="HomePage" />
        <ShellContent
            Title="{x:Static localization:AppResources.Game}"
            ContentTemplate="{DataTemplate pages:DeweyGamePage}"
            Route="GamePage" />
    </TabBar>
</Shell>
